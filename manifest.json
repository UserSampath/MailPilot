{
  "name": "MailPilot",
  "description": "AI-powered Gmail assistant to quickly compose emails, fill templates, generate professional replies, and streamline your email workflow effortlessly.",
  "version": "1.4",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://localhost:8080/*", "*://mail.google.com/*"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "action": {
    "default_title": "Automated Email Writer",
    "default_icon": "message.png"
  }
}
